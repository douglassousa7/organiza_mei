<h1 class="text-3xl font-bold mb-4">Notificações</h1>

<div class="mb-4">
  <%= link_to "Todas", notifications_path, class: "mr-2 text-blue-500 hover:underline" %>
  <%= link_to "Pendentes", notifications_path(status: "pendente"), class: "mr-2 text-blue-500 hover:underline" %>
  <%= link_to "Enviadas", notifications_path(status: "enviada"), class: "text-blue-500 hover:underline" %>
</div>

<%= link_to 'Nova Notificação', new_notification_path, class: "bg-green-500 text-white px-4 py-2 rounded" %>

<div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
  <% @notifications.each do |notification| %>
    <div class="border p-4 rounded shadow">
      <h2 class="text-xl font-bold"><%= notification.user %></h2>
      <p class="mt-2"><%= notification.message %></p>
      <p class="mt-2 text-sm text-gray-500">Status: <%= notification.status %></p>
      <p class="mt-2 text-sm text-gray-500">Criado em: <%= l(notification.created_at, format: :short) %></p>
    </div>
  <% end %>
</div>
